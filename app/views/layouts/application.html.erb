<!DOCTYPE html>                                           <!-- řádek 1 -->
<html>
<head>
  <title>Internetové knihkupectví Pragprog</title>
  <%= stylesheet_link_tag "scaffold" %>                   <!-- řádek 5 -->
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store" >                                        <!-- řádek 10 -->
  <div id="banner" >
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatická knihovna" %>
  </div>
  <div id="columns" >                                     <!-- řádek 15 -->
    <div id="side" >
      <div id="cart">
        <%= render @cart %>
      </div>
      <a href="http://www...." >Úvod</a><br />
      <a href="http://www..../faq" >Otázky</a><br />
      <a href="http://www..../news" >Novinky</a><br />
      <a href="http://www..../contact" >Kontakt</a><br />
      <p>Aktuálny čas: </br>
      	<%= @time %></p>
      <p>Dnes je: </br>
      	<%= @date %></p>
        <span><%= @count %></span>
    </div>
    <div id="main" >
      <%= yield %>
    </div>
  </div>                                                  <!-- řádek 25 -->
</body>
</html>
